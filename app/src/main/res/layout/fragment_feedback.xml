<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/launchQQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用QQ联系作者"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/launchGithub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="在GitHub提交新的issue"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/launchQQ" />

    <Button
        android:id="@+id/launchCoolApk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="在酷安网评论"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/launchGithub" />
</androidx.constraintlayout.widget.ConstraintLayout>